{
  "name": "MariaDB+",
  "version": "0.12.22",
  "slug": "mariadbp",
  "description": "An SQL database server plus...",
  "url": "https://github.com/pssc/hassio-addons-mariadb/",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "services": ["mysql:provide","mysql:want"],
  "startup": "initialize",
  "boot": "auto",
  "stdin": true,
  "ports": {
    "3306/tcp": null
  },
  "ports_description": {
	  "3306/tcp": "Extenal DB access"
  },
  "options": {
    "databases": ["homeassistant"],
    "logins": [
      {"username": "ha" }
    ],
    "rights": [
      {"username": "ha", "database": "homeassistant" }
    ],
    "register": []
  },
  "schema": {
    "databases": ["str"],
    "logins": [
        {"username": "str", "host": "str?", "password": "str?"}
    ],
    "rights": [
      {"username": "str", "host": "str?", "database": "str", "grant": "str?"}
    ],
    "ssl": "bool?",
    "certfile": "str?",
    "keyfile": "str?",
    "tmpfs": "bool?",
    "lowmem": "bool?",
    "limit": "bool?",
    "backup": "bool?",
    "internal": "bool?",
    "restore": "bool?",
    "service": "bool?",
    "uniq": "bool?",
    "xz": "bool?",
    "register": ["str"]
  },
  "stage": "experimental",
  "timeout": 300,
  "map": [
      "config:rw",
      "ssl",
      "share:rw",
      "backup:rw"
  ],
  "tmpfs":"size=4g,rw",
  "hassio_api": true,
  "homeassistant_api": true
}
